<head>
    <%- include('../../common/headScripts') %>
</head>

<h2>Add Class</h2>
<p>Hello <%= locals.netId %></p>
<h4>Enter new class information</h4>

<% if (locals.errors) { %>
    <p>Errors:</p>
    <% for (var i = 0; i < errors.length; i++) { %>
        <p><%= i + 1 %>. <%= errors[i] %></p>
    <% } %>
<% } %>

<form method=POST> 
    <label for="code">Code</label>
    <input type="text" id="code" name="code"/>

    <label for="name">Name</label>
    <input type="text" id="name" name="name"/>

    <label for="defLocation">Default Location</label>
    <input type="text" id="defLocation" name="defLocation"/>

    <input type="submit" value="Create">
</form>

<% if (locals.status && status === 201) { %>
    <p>Success! Class created.<p>
<% } %>